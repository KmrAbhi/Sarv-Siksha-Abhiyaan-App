<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameHome"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/playbutton1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="60dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/playbutton2"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/playbutton3"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/playbutton4"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playbutton5"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/buttonshape" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playbutton6"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/buttonshape" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playbutton7"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/buttonshape" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playbutton8"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/buttonshape" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="40dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="EXIT"
            android:id="@+id/exit"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="replay"
            android:id="@+id/next"/>
    </LinearLayout>


</RelativeLayout>
